generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  tasks Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  status      Status   @default(TODO)
  priority    Priority @default(LOW)
  type        Type     @default(OTHER)
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
  CANCELED
}

enum Type {
  BUG
  FEATURE
  ENHANCEMENT
  DOCUMENTATION
  OTHER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
